#!/usr/bin/env ruby
# frozen_string_literal: true
# vim: filetype=ruby

require 'timeout'

lib = File.expand_path('lib', __dir__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

Encoding.default_internal = 'UTF-8'
Encoding.default_external = 'UTF-8'

# zinbeijett function
module EngineLeft
  module_function

  def search_txt
    require 'all'
    All.search
  end

  def search_txi
    require 'and'
    And.search
  end

  def search_txe
    require 'not'
    Not.search
  end

  def search_txs
    require 'or'
    Or.search
  end

  def search_gc
    require 'gc'
    Star.search
  end

  def search_druby_erb
    require 'druby_erb'
    Druby.new.main
  end
  
  def druby_server
    require 'druby_reci'
  end

  def search_mail
    require 'mail'
    Mail.search
  end

  def count_search
    require 'count'
    Count.search
  end

  def calendar_view
    require 'calendar'
    Calendar.view
    puts ''
  end

  def auto_view
    require 'autocal'
    Auto.view
    puts ''
  end

  def hyaku_view
    require 'hyaku'
    Hyaku.view
    puts ''
  end

  def mini_view
    require 'mini'
    Mini.search
    puts ''
  end

  def match_view
    require 'match'
    Mat.search
    puts ''
  end

  def title_rss
    require 'title'
    Title.new.views
  end

  def feed_xml
    require 'feed'
    puts ' Feed Start '.center(60, '-')
    Feed.new.jira
    puts ' Feed End '.center(60, '-')
  end

  def summa_xml
      require 'summa.rb'
      puts ' Summary Start '.center(60, '-')
      Feed.new.jira
      puts ' Summary end '.center(60, '-')
  end
  
  def version_info
    require 'version'
    puts '[ version ]'.center(60, '-')
    puts ''
    puts 'Engine VERSION : ' + EngineLeft::VERSION
    puts ''
    puts '[ version ]'.center(60, '-')
  end
  
  def rice_keitaiso
    require 'rice'
  end
  
  def suihan_wakati
    require 'suihan'
  end
  
  def kome_wakati
    require 'kome'
  end
  
  def tubuyaki_jett
    require 'tubuyaki'
  end
  
  def tubuyaki_log
    require 'tubuyaki_memo'
  end
  
  def match_log
    require 'all_log'
    Mat.search
    puts ''
  end
  
  def decript_snowcat
    require 'decript'
    String_encrypt.new.use_case_hash
  end
  
  def tweet_cmd
    require 'tweet_cmd'
  end
  
  def saikoro_py
    require 'saikoro'
    Dice.new.saiko
  end
end

include EngineLeft

one = ARGV[0]

a = /\A[-][a]\z/
b = /\A[-][b]\z/
c = /\A[-][c]\z/
d = /\A[-][d]\z/
e = /\A[-][e]\z/
f = /\A[-][f]\z/
g = /\A[-][g]\z/
h = /\A[-][h]\z/
i = /\A[-][i]\z/
j = /\A[-][j]\z/
k = /\A[-][k]\z/
l = /\A[-][l]\z/
m = /\A[-][m]\z/
n = /\A[-][n]\z/
o = /\A[-][o]\z/
p = /\A[-][p]\z/
q = /\A[-][q]\z/
r = /\A[-][r]\z/
s = /\A[-][s]\z/
t = /\A[-][t]\z/
u = /\A[-][u]\z/
v = /\A[-][v]\z/
w = /\A[-][w]\z/
x = /\A[-][x]\z/
y = /\A[-][y]\z/
z = /\A[-][z]\z/

begin
if one.nil?
  druby_server
elsif one.match?(a)
  search_txi
elsif one.match?(b)
  summa_xml
elsif one.match?(c)
  calendar_view
elsif one.match?(d)
  search_druby_erb
elsif one.match?(e)
  tubuyaki_jett
elsif one.match?(f)
  auto_view
elsif one.match?(g)
  search_gc
elsif one.match?(h)
  hyaku_view
elsif one.match?(i)
  tubuyaki_log
elsif one.match?(j)
  feed_xml
elsif one.match?(k)
  match_log
elsif one.match?(l)
  saikoro_py
elsif one.match?(m)
  search_mail
elsif one.match?(n)
  search_txe
elsif one.match?(o)
  search_txs
elsif one.match?(p)
  mini_view
elsif one.match?(q)
  decript_snowcat
elsif one.match?(r)
  title_rss
elsif one.match?(s)
  count_search
elsif one.match?(t)
  match_view
elsif one.match?(u)
  tweet_cmd
elsif one.match?(v)
  version_info
elsif one.match?(w)
  rice_keitaiso
elsif one.match?(x)
  kome_wakati
elsif one.match?(y)
  suihan_wakati
elsif one.match?(z)
  search_txt
end
rescue Exception => e
	#puts e.backtrace
end


GC.start

__END__